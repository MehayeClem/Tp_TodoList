html
    head
        title Todolist
        style
            include ../style.css
    body
        a(href='/users') Users
        br
        a(href='/todos/add') Ajouter une Todo
        h1 Ma Todolist :
        table
            tr
                td id
                td Message
                td Completion
                td UserId
                td CreatedAt
                td UpdatedAt
                
            each todo in todos
                tr
                    td= todo.rowid
                    td= todo.message 
                    td= todo.completion
                    td= todo.userId 
                    td= todo.createdAt
                    td= todo.updatedAt
                    td 
                        a(href='/todos/' + todo.rowid) Afficher
                    td 
                        a(href='/todos/' + todo.rowid + '/edit') Modifier
                    td
                        form(action="/todos/" + todo.rowid + "?_method=DELETE" method="post")
                            input(type="submit" value="Supprimer")
                